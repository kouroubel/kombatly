.container.mt-5
  %h1.mb-4 Teams

  = link_to "New Team", new_team_path, class: "btn btn-primary mb-3"

  %table.table.table-striped.table-bordered
    %thead
      %tr
        %th ID
        %th Name
        %th Coach
        %th Created At
        %th Actions
    %tbody
      - @teams.each do |team|
        %tr
          %td= team.id
          %td= team.name
          %td= team.team_admin.fullname
          %td= team.created_at.strftime("%d.%m.%Y")
          %td
            .d-flex.gap-2
              = link_to "Edit", edit_team_path(team), class: "btn btn-sm btn-primary"
              = link_to "Delete", team_path(team), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-danger"
