.container.mt-5
  .row.justify-content-center
    .col-md-5
      .card.shadow-sm
        .card-body.p-4
          %h2.text-center.mb-4 Resend confirmation instructions
          
          = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
            = devise_error_messages!
            
            .mb-3
              = f.label :email, class: "form-label"
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)
            
            .d-grid.mb-3
              = f.submit "Resend confirmation instructions", class: "btn btn-primary btn-lg"
            
            = render "devise/shared/links"