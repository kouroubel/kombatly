.container.mx-auto.mt-10.max-w-sm
  .bg-white.shadow-md.rounded-lg.p-6
    %h2.text-2xl.font-bold.mb-6 Log in
    
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f|
      = render "devise/shared/error_messages", resource: resource
    
      .field
        = f.label :email, class: "block text-sm font-medium text-gray-700"
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full border border-gray-300 px-2 py-1"
    
      .field
        = f.label :password, class: "block text-sm font-medium text-gray-700"
        = f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full border border-gray-300 px-2 py-1"
    
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me, class: "ml-2 text-sm text-gray-700"
    
      .actions
        = f.submit "Log in", class: "w-full py-2 px-4 bg-indigo-600 text-white font-semibold hover:bg-indigo-700 focus:outline-none"
    
    = render "devise/shared/links"
