= render "shared/errors", obj: @user

.container.mt-5
  .card.p-4.shadow
    %h2.text-xl.font-bold.mb-4 Edit Role

    = form_for @user do |f|
      .mb-3
        = f.label :role
        = f.select :role, options_for_select([["Team", "team"], ["Athlete", "athlete"], ["Pending", "pending"]], @user.role), {}, class: "form-select"
      .actions
        = f.submit "Update Role", class: "btn btn-primary"
