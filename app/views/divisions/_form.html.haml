= render "shared/errors", obj: @division

.card.shadow
  .card-body
    = form_with(model: [@event, @division], local: true) do |f|
      .mb-3
        = f.label :name, class: "form-label"
        = f.text_field :name, class: "form-control"
        
      .mb-3
        = f.label :sex, class: "form-label"
        = f.select :sex, Athlete::SEXES, {}, class: "form-select"

      .row
        .col-md-6
          .mb-3
            = f.label :min_age, class: "form-label"
            = f.number_field :min_age, class: "form-control"

        .col-md-6
          .mb-3
            = f.label :max_age, class: "form-label"
            = f.number_field :max_age, class: "form-control"

      .row
        .col-md-6
          .mb-3
            = f.label :min_weight, class: "form-label"
            = f.number_field :min_weight, step: 0.01, class: "form-control"

        .col-md-6
          .mb-3
            = f.label :max_weight, class: "form-label"
            = f.number_field :max_weight, step: 0.01, class: "form-control"

      .row
        .col-md-6
          .mb-3
            = f.label :min_rank, class: "form-label"
            = f.number_field :min_rank, class: "form-control"

        .col-md-6
          .mb-3
            = f.label :max_rank, class: "form-label"
            = f.number_field :max_rank, class: "form-control"
        
      .mb-3
        = f.label "Rules", class: "form-label"
        = f.text_area :description, class: "form-control"
        
      .mb-3
        = f.label @division.event.competition_area_name, class: "form-label"
        = f.text_field :court, class: "form-control"
        
      .mb-3
        = f.label "Cost (â‚¬)", class: "form-label"
        = f.text_field :cost, class: "form-control"

      .mt-3
        = f.submit class: "btn btn-primary"
